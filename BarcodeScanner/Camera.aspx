<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="Camera.aspx.cs" Inherits="BarcodeScanner.Camera" %>

<!DOCTYPE html>

<html lang="en">
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ZXing Barcode Scanner Demo</title>
    <script type="text/javascript" src="Scripts/modernizr-2.8.3.js"></script>
    <link rel="stylesheet" href="Content/Camera.css" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
    <header>
        <h1>ZXing Barcode Scanner Demo</h1>
    </header>
    <div id="camera">
        <video id="stream" autoplay></video>
        <%--<a id="restart" class="btn" href="#">Restart</a>--%>
        <canvas id="canvas" hidden></canvas>
    </div>
    <div id="output">
        Connecting to camera...
    </div>
    <footer>
        <div class="footer-content">
            <p>&copy; <%: DateTime.Now.Year %> - ZXing Barcode Scanner Demo</p>
        </div>
    </footer>
    <script src="Scripts/zxing_reader.js"></script>
    <script type="text/javascript">
        var output = document.getElementById('output');
        var snd = new Audio("data:audio/wav;base64,");  

        function beep() {
            snd.play();
        }

        // Check for mediaDevices API
        if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
            var zxing = null;
            ZXing().then(function(value) {
                zxing = value;
            });

            var video = document.getElementById('stream');
            var canvas = document.getElementById('canvas');
            var context = canvas.getContext('2d');

            var constraints = {
                audio: false,
                video: {
                    facingMode: 'environment'
                }
            };

            // Not adding `{ audio: true }` since we only want video now
            navigator.mediaDevices.getUserMedia(constraints).then(function (stream) {
                //video.src = window.URL.createObjectURL(stream);
                video.srcObject = stream;
                video.setAttribute("playsinline", true); // required to tell iOS safari we don't want fullscreen
                video.play();

                if (output) {
                    output.innerHTML = 'Camera connected...';
                }

                requestAnimationFrame(tick);

            }).catch(function (error) {
                if (output)
                    output.innerHTML = error;

                console.log(error);
            });

            //var btnRestart = document.getElementById('restart');
            //btnRestart.setAttribute('href', '');
            //btnRestart.onclick = function () {
            //    scanBarcode();
            //    return false;
            //}

            function tick() {
                if (video.readyState === video.HAVE_ENOUGH_DATA) {

                    canvas.width = video.videoWidth;
                    canvas.height = video.videoHeight;
                    context.drawImage(video, 0, 0, canvas.width, canvas.height); // Capture an image from the camera

                    var code = scanBarcode(canvas);

                    if (code.error) {
                        if (output)
                            output.innerHTML = code.error;
                    }
                    else if (code.format) {
                        if (output) {
                            output.innerHTML = "Format: " + code.format + ", Text: " + code.text + ", Position: " + code.position;
                            beep();
                        }
                    }
                    //else {
                    //    if (output)
                    //        output.innerHTML = 'An unknown error occured.';
                    //}
                }
                requestAnimationFrame(tick);
            }

            function scanBarcode(canvasElement) {



                var imageWidth = canvasElement.width;
                var imageHeight = canvasElement.height;
                var imageData = canvasElement.getContext('2d').getImageData(0, 0, imageWidth, imageHeight);
                var sourceBuffer = imageData.data;

                if (zxing != null) {
                    var buffer = zxing._malloc(sourceBuffer.byteLength);
                    zxing.HEAPU8.set(sourceBuffer, buffer);
                    var result = zxing.readBarcodeFromPixmap(buffer, imageWidth, imageHeight, true, '');
                    zxing._free(buffer);
                    return result;
                }
                else {
                    if (output)
                        output.innerHTML = 'ZXing not initialized...';
                }

            }
        }
        else {
            if (output)
                output.innerHTML = 'mediaDevices API not supported.';
        }
    </script>
</body>
</html>
